	<!-- Login Views -->
	<definition name="login/*" extends="defaultView">
		<put-attribute name="body" value="/WEB-INF/pages/login/{1}.jsp" />
	</definition>
	
	<!--  User Views -->
	<definition name="user/*" extends="defaultView">
		<put-attribute name="title" value="ChefComeCook - User Home" />
		<put-attribute name="body" value="/WEB-INF/pages/user/{1}.jsp" />
	</definition>
	
	<!--  Order Views -->
	<definition name="order/*" extends="defaultView">
		<put-attribute name="body" value="/WEB-INF/pages/order/{1}.jsp" />
	</definition>
	
	<!--  Service Provider Views -->
	<definition name="serviceprovider/*" extends="defaultView">
		<put-attribute name="body" value="/WEB-INF/pages/serviceprovider/{1}.jsp" />
	</definition>
	
	<!--  Home Views -->
	<definition name="homeView" extends="defaultView">
		<put-attribute name="header" value="" />
		<put-attribute name="body" value="/WEB-INF/pages/common/home.jsp" />
	</definition>
	
	
	<!--  Common Views -->
	<definition name="common/*" extends="defaultView">
		<put-attribute name="body" value="/WEB-INF/pages/common/{1}.jsp" />
	</definition>
	
	<!--  Common Views -->
	<definition name="test/*" extends="defaultView">
		<put-attribute name="body" value="/WEB-INF/pages/test/{1}.jsp" />
	</definition>
</tiles-definitions>
